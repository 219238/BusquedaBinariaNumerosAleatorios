#include<stdio.h>	
#include<stdlib.h>
#include<time.h>
	
int main (){
//ordenar el vector por selecci√≥n
	int vect[5];
	srand(time(NULL));
	int aux, min;
	for (int i = 0; i < 5; i ++){
		vect[i] = (rand()%30)+10;
	}
	for (int i = 0; i < 5 - 1; i ++){
		min = i;
		for (int j = i + 1; j < 5; j ++){
			if (vect[j] < vect[min]){
				min = j;
			}
		}
			aux = vect[i];
			vect[i] = vect[min];
			vect[min] = aux;
		
	}
	printf("VECTOR ORDENADO \n");
	for (int i = 0; i < 5; i ++){
		printf("[%i]", vect[i]);
	}
	
//BUSQUEDA BINARIA
	int dato;
	printf("\nINGRESA NUMERO A BUSCAR: \n");
	scanf("%i", &dato);
	int inf=0, sup=5, mitad;
	bool band = false;
	
	while(inf<=sup){
		mitad=(inf+sup)/2;
		
		if(vect[mitad]==dato){
			
			band= true;
			printf("NUMERO ENCONTRADO EN LA POSICION %i", mitad);
			break; 
		
		}
		
		if(vect[mitad]<dato){
				inf=mitad;
				mitad=(inf+sup)/2;
				}
			if(vect[mitad]>dato){
				sup=mitad;
				mitad=(inf+sup)/2;
			}
		}
		if (band == false){
			printf("NUMERO NO ENCONTRADO");
		}

}
